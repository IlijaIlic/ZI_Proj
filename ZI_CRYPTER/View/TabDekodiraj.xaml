<UserControl x:Class="ZI_CRYPTER.View.TabDekodiraj"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZI_CRYPTER.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="[vm ]clr-namespace:ZI_CRYPTER.ViewModel"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TextBox.xaml" />
                <ResourceDictionary Source="../Styles/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Grid.RowSpan="7"
                   Grid.Row="2"
                   Grid.ColumnSpan="4"
                   Grid.Column="1"
                   RadiusX="20"
                   RadiusY="20"
                   Margin="-30,-10,-30,-10">

            <Rectangle.Fill>

                <LinearGradientBrush StartPoint="1,0"
                                     EndPoint="0,1">

                    <GradientStop Offset="0.0"
                                  Color="DarkOrange" />
                    <GradientStop Offset="0.9"
                                  Color="Orange" />

                </LinearGradientBrush>

            </Rectangle.Fill>

        </Rectangle>

        


       

        <Rectangle Grid.Row="3"
                   Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Margin="-10,-5,-10,15"
                   Fill="Transparent"
                   RadiusX="10"
                   RadiusY="10" />


        <Button Grid.Row="10"
                Grid.Column="2"
                Grid.ColumnSpan="3"
                Margin="-15,-10,-30,20"
                Background="DarkOrange"
                BorderBrush="Transparent"
                Command="{Binding ChooseOutputLocationCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                          Margin="5,0,5,2"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Stretch"
                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="#FF4CAF50" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Viewbox HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch">

                <TextBlock FontFamily="Franklin Gothic Heavy"
                           Foreground="White"
                           Text="{Binding DecodeOutput}"
                           TextWrapping="Wrap" />

            </Viewbox>
        </Button>

        <TextBlock Grid.Row="10"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Left"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="14"
                   Foreground="White"
                   Text="Output lokacija: "
                   TextWrapping="Wrap" />

        <!-- LOS BUTTON
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="-10,-5,-10,15"
            HorizontalAlignment="Left"
            Background="#FF2D2D2D"
            BorderBrush="{x:Null}"
            Command="{Binding ChooseOutputLocationCommand}"
            FontFamily="Franklin Gothic Heavy"
            Foreground="White">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#FF4CAF50" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Image
                    Width="16"
                    Height="16"
                    Margin="5,0,0,0"
                    Source="/folder.png" />
            </StackPanel>
        </Button>
        -->



        <Rectangle Grid.Row="2"
                   Grid.RowSpan="4"
                   Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Margin="0,20,0,35"
                   Fill="White"
                   RadiusX="20"
                   RadiusY="20" />


        <Grid Grid.Row="2"
              Grid.RowSpan="4"
              Grid.Column="1"
              Grid.ColumnSpan="4"
              Margin="0,20,0,35">
            <StackPanel Margin="10">
                <Button Height="30"
                        Background="#FF2D2D2D"
                        Command="{Binding AddFileToDecodeCommand}"
                        FontFamily="Franklin Gothic Heavy"
                        Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="borderEnc"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter TargetName="borderEnc"
                                            Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#FFFF4D2F" />
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground"
                                            Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center"
                                   Text="Izaberi fajl za dekodiranje" />
                        <Image Width="16"
                               Height="16"
                               Margin="5,0,0,0"
                               Source="/upload.png" />
                    </StackPanel>
                </Button>

                <ItemsControl ItemsSource="{Binding FileToDecode}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="10"
                                       Foreground="Black"
                                       Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </Grid>

        <TextBlock Grid.RowSpan="2"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="30"
                   Foreground="White"
                   Text="DEKODIRAJ"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="6"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0,-20,0,20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="14"
                   Foreground="White"
                   Text="Izaberite algoritam za dekodiranje:"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <ComboBox Grid.Row="6"
                  Grid.ColumnSpan="1"
                  Grid.Column="4"
                  Margin="0,-20,0,20"
                  FontFamily="Franklin Gothic Heavy"
                  FontSize="16"
                  Foreground="White"
                  SelectedValue="{Binding DecodeAlg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedValuePath="Content">
            <ComboBoxItem Content="A5/1" />
            <ComboBoxItem Content="XTEA" />
            <ComboBoxItem Content="XTEA + OFB" />
        </ComboBox>

        <TextBlock Grid.Row="7"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="14"
                   Foreground="White"
                   Text="Unesite kljuc za dekodiranje:"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <TextBox Grid.Row="7"
                 Grid.Column="3"
                 Grid.ColumnSpan="2"
                 Background="#FF2D2D2D"
                 BorderBrush="Orange"
                 BorderThickness="1"
                 Foreground="White"
                 Style="{StaticResource RoundedTextBox}"
                 Text="{Binding DecodeKey}"
                 TextAlignment="Left" />

        <Button Grid.Row="11"
                Grid.Column="4"
                Grid.ColumnSpan="1"
                Margin="0,0,-30,0"
                Background="DarkOrange"
                BorderBrush="{x:Null}"
                Command="{Binding DecodeCommand}"
                Content="Dekodiraj"
                FontFamily="Franklin Gothic Heavy"
                Foreground="White">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="#FFFF4D2F" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
    </Grid>
</UserControl>
