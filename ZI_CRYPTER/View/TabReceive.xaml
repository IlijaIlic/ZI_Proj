<UserControl
    x:Class="ZI_CRYPTER.View.TabReceive"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZI_CRYPTER.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TextBox.xaml" />
                <ResourceDictionary Source="../Styles/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Rectangle
            Grid.RowSpan="12"
            Grid.ColumnSpan="6"
            RadiusX="20"
            RadiusY="20">

            <Rectangle.Fill>

                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">

                    <GradientStop Offset="0.0" Color="DarkOrange" />
                    <GradientStop Offset="0.9" Color="Orange" />

                </LinearGradientBrush>

            </Rectangle.Fill>

        </Rectangle>


        <TextBlock
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="30"
            Foreground="White"
            Text="PRIMI FAJL"
            TextAlignment="Center"
            TextWrapping="Wrap" />


        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="15"
            Foreground="White"
            Text="Port:"
            TextAlignment="Center"
            TextWrapping="Wrap" />


        <TextBox
            Grid.Row="2"
            Grid.Column="4"
            Margin="20,0,0,0"
            Background="#FF2D2D2D"
            BorderBrush="Orange"
            BorderThickness="1"
            Foreground="White"
            MaxLength="5"
            Style="{StaticResource RoundedTextBox}"
            Text="{Binding SendPort}"
            TextAlignment="Center" />

        <ToggleButton Grid.Row="10" Grid.Column="4">
            <ToggleButton.Template>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="White" />
                            <Setter Property="Content" Value="Prekini" />
                            <Setter Property="Foreground" Value="#FF2D2D2D" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFFF4D2F" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}">
                    <Setter Property="Background" Value="#FF2D2D2D" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Content" Value="Osluskuj" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="FontFamily" Value="Franklin Gothic Heavy" />
                </Style>
            </ToggleButton.Style>
        </ToggleButton>




        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="15"
            Foreground="White"
            Text="Izaberite algoritam za dekodiranje:"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <ComboBox
            Grid.Row="4"
            Grid.Column="4"
            FontFamily="Franklin Gothic Heavy"
            FontSize="16"
            Foreground="White"
            SelectedValue="{Binding DecodeAlg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="Content">
            <ComboBoxItem Content="A5/1" />
            <ComboBoxItem Content="XTEA" />
            <ComboBoxItem Content="XTEA + OFB" />
        </ComboBox>

        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="15"
            Foreground="White"
            Text="Unesite kljuc za dekodiranje:"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <TextBox
            Grid.Row="6"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Background="#FF2D2D2D"
            BorderBrush="Orange"
            BorderThickness="1"
            Foreground="White"
            Style="{StaticResource RoundedTextBox}"
            Text="{Binding DecodeKey}"
            TextAlignment="Left" />

    </Grid>
</UserControl>