<UserControl x:Class="ZI_CRYPTER.View.TabReceive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZI_CRYPTER.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             xmlns:controls="clr-namespace:ZI_CRYPTER.Styles">



    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TextBox.xaml" />
                <ResourceDictionary Source="../Styles/ComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Rectangle Grid.RowSpan="5"
                   Grid.Row="2"
                   Grid.ColumnSpan="4"
                   Grid.Column="1"
                   Margin="-30,-10,-30,-20"
                   RadiusX="20"
                   RadiusY="20">

            <Rectangle.Fill>

                <LinearGradientBrush StartPoint="1,0"
                                     EndPoint="0,1">

                    <GradientStop Offset="0.0"
                                  Color="DarkOrange" />
                    <GradientStop Offset="0.9"
                                  Color="Orange" />

                </LinearGradientBrush>

            </Rectangle.Fill>

        </Rectangle>

        <controls:Loading Grid.Column="4"
                          Margin="-75,5,75,0"
                          Visibility="{Binding ReceiveLoading}" />

        <TextBlock Grid.RowSpan="2"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="30"
                   Foreground="White"
                   Text="PRIMI FAJL"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <Button Grid.Row="10"
                Grid.Column="2"
                Grid.ColumnSpan="3"
                Margin="-15,-10,-30,20"
                Background="DarkOrange"
                BorderBrush="Transparent"
                Command="{Binding ChangeReceiveLocationCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                          Margin="5,0,5,2"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Stretch"
                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="#FF4CAF50" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Viewbox HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch">

                <TextBlock FontFamily="Franklin Gothic Heavy"
                           Foreground="White"
                           Text="{Binding ReceiveOutput}"
                           TextWrapping="Wrap" />

            </Viewbox>
        </Button>

        <TextBlock Grid.Row="10"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Left"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="14"
                   Foreground="White"
                   Text="Output lokacija: "
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="15"
                   Foreground="White"
                   Text="Port:"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />


        <TextBox Grid.Row="2"
                 Grid.Column="4"
                 Margin="20,0,0,0"
                 Background="#FF2D2D2D"
                 BorderBrush="Orange"
                 BorderThickness="1"
                 Foreground="White"
                 MaxLength="5"
                 Style="{StaticResource RoundedTextBox}"
                 Text="{Binding ReceivePort}"
                 TextAlignment="Center" />

        <ToggleButton Grid.Row="11"
                      Grid.Column="4"
                      Grid.ColumnSpan="1"
                      Margin="0,0,-30,0"
                      Command="{Binding ListenCommand}"
                      IsChecked="{Binding ReceiveChecked, Mode=TwoWay}">
            <ToggleButton.Template>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="10">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"
                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="White" />
                            <Setter Property="Content"
                                    Value="Prekini" />
                            <Setter Property="Foreground"
                                    Value="#FF2D2D2D" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#FFFF4D2F" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}">
                    <Setter Property="Background"
                            Value="DarkOrange" />
                    <Setter Property="BorderBrush"
                            Value="Transparent" />
                    <Setter Property="Content"
                            Value="Osluskuj" />
                    <Setter Property="Foreground"
                            Value="White" />
                    <Setter Property="FontFamily"
                            Value="Franklin Gothic Heavy" />
                </Style>
            </ToggleButton.Style>
        </ToggleButton>




        <TextBlock Grid.Row="4"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="15"
                   Foreground="White"
                   Text="Izaberite algoritam za dekodiranje:"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <ComboBox x:Name="ReceiveCMBox"
                  Grid.Row="4"
                  Grid.Column="4"
                  FontFamily="Franklin Gothic Heavy"
                  FontSize="16"
                  Foreground="White"
                  SelectionChanged="ComboBox_SelectionChanged"
                  SelectedValue="{Binding ReceiveAlg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectedValuePath="Content">
            <ComboBoxItem Content="A5/1" />
            <ComboBoxItem Content="XTEA" />
            <ComboBoxItem Content="XTEA + OFB" />
        </ComboBox>

        <TextBlock Grid.Row="6"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="15"
                   Foreground="White"
                   Text="Unesite kljuc za dekodiranje:"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="8"
                   Grid.ColumnSpan="4"
                   Grid.Column="1"
                   FontFamily="Franklin Gothic Heavy"
                   Foreground="White"
                   Text="{Binding InfoTextRec, PresentationTraceSources.TraceLevel=High}"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,15,0,-15"
                   FontSize="15" />

        <TextBox Grid.Row="6"
                 Grid.Column="3"
                 Grid.ColumnSpan="1"
                 Background="#FF2D2D2D"
                 BorderBrush="Orange"
                 BorderThickness="1"
                 Foreground="White"
                 Margin="0,0,-30,0"
                 Style="{StaticResource RoundedTextBox}"
                 Text="{Binding ReceiveKey}"
                 TextAlignment="Left" />

        <TextBox x:Name="ReceiveIVTextBox"
                 Grid.Row="6"
                 Grid.Column="4"
                 Grid.ColumnSpan="1"
                 Margin="35,0,0,0"
                 Background="#FF2D2D2D"
                 BorderBrush="Orange"
                 BorderThickness="1"
                 Foreground="White"
                 Style="{StaticResource RoundedTextBox}"
                 Text="{Binding ReceiveIV}"
                 TextAlignment="Left" />

    </Grid>
</UserControl>