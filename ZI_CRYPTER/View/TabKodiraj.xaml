<UserControl x:Class="ZI_CRYPTER.View.TabKodiraj"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZI_CRYPTER.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="[vm ]clr-namespace:ZI_CRYPTER.ViewModel"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">




    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Rectangle Grid.RowSpan="8"
                   Grid.Row = "2"
                   Grid.ColumnSpan="4"
                   Grid.Column="1"
                   Margin="-30,-10,-30,-10"
                   RadiusX="20"
                   RadiusY="20">

            <Rectangle.Fill>

                <LinearGradientBrush StartPoint="1,0"
                                     EndPoint="0,1">

                    <GradientStop Offset="0.0"
                                  Color="DarkOrange" />
                    <GradientStop Offset="0.9"
                                  Color="Orange" />

                </LinearGradientBrush>

            </Rectangle.Fill>

        </Rectangle>

        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="0,0,20,0"
                   HorizontalAlignment="Left"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="20"
                   Foreground="White"
                   Text="Fajlovi za kodiranje"
                   TextAlignment="Center"
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"/>

        <Rectangle Grid.Row="3"
                   Grid.RowSpan="6"
                   Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Margin="0,30"
                   Fill="White"
                   RadiusX="20"
                   RadiusY="20" />



        <ScrollViewer Grid.Row="3"
                      Grid.RowSpan="6"
                      Grid.Column="1"
                      Grid.ColumnSpan="4"
                      Margin="0,30"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilesToCode}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="10"
                                   Foreground="Black"
                                   Text="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="4"
                Grid.Column="5"
                Grid.ColumnSpan="1"
                Margin="60,0,25,0"
                Background="DarkOrange"
                Command="{Binding AddFileCommand}"
                FontFamily="Franklin Gothic Heavy"
                Foreground="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="borderEnc"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="borderEnc"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Image Width="16"
                   Height="16"
                   Source="/upload.png" />

        </Button>

        <Button Grid.Row="6"
                Grid.Column="5"
                Grid.ColumnSpan="1"
                Margin="60,0,25,0"
                Background="DarkOrange"
                Command="{Binding RemoveAllFilesCommand}"
                FontFamily="Franklin Gothic Heavy"
                Foreground="Orange">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="borderEnc"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="borderEnc"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

            <Image Width="16"
                   Height="16"
                   Source="/delete.png" />
        </Button>


        <TextBlock Grid.RowSpan="2"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   FontFamily="Franklin Gothic Heavy"
                   FontSize="30"
                   Foreground="White"
                   Text="KODIRAJ"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />

        <StackPanel Grid.Row="9"
                    Grid.Column="1"
                    Margin="0,2,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

            <TextBlock FontFamily="Franklin Gothic Heavy"
                       FontSize="15"
                       Foreground="White"
                       Text="FSW" />
            <CheckBox Margin="10,0,0,0"
                      Background="White"
                      Command="{Binding CheckCommand}"
                      CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                      Foreground="#FFFF9300"
                      IsChecked="{Binding FSWCheck, Mode=TwoWay}" />

        </StackPanel>

        <Button Grid.Row="11"
                Grid.Column="4"
                Grid.ColumnSpan="1"
                Margin="0,0,-30,0"
                Background="DarkOrange"
                BorderBrush="{x:Null}"
                Command="{Binding CodeCommand}"
                Content="Kodiraj"
                FontFamily="Franklin Gothic Heavy"
                Foreground="White">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground"
                                    Value="#FF4CAF50" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
    </Grid>
</UserControl>
