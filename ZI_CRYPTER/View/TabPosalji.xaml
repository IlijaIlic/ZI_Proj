<UserControl
    x:Class="ZI_CRYPTER.View.TabPosalji"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZI_CRYPTER.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        <Rectangle
            Grid.RowSpan="12"
            Grid.ColumnSpan="6"
            RadiusX="20"
            RadiusY="20">

            <Rectangle.Fill>

                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">

                    <GradientStop Offset="0.0" Color="DarkOrange" />
                    <GradientStop Offset="0.9" Color="Orange" />

                </LinearGradientBrush>

            </Rectangle.Fill>

        </Rectangle>

        <TextBlock
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="30"
            Foreground="White"
            Text="POSALJI FAJL"
            TextAlignment="Center"
            TextWrapping="Wrap" />


        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="15"
            Foreground="White"
            Text="IP Adresa:"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Franklin Gothic Heavy"
            FontSize="15"
            Foreground="White"
            Text="Port:"
            TextAlignment="Center"
            TextWrapping="Wrap" />




        <StackPanel
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <TextBox
                Width="50"
                Margin="5,0,5,0"
                Background="#FF2D2D2D"
                BorderBrush="Orange"
                BorderThickness="1"
                Foreground="White"
                MaxLength="3"
                Style="{StaticResource RoundedTextBox}"
                TextAlignment="Center" />

            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontFamily="Franklin Gothic Heavy"
                FontSize="15"
                Foreground="#FF2D2D2D"
                Text="."
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBox
                Width="50"
                Margin="5,0,5,0"
                Background="#FF2D2D2D"
                BorderBrush="Orange"
                BorderThickness="1"
                Foreground="White"
                MaxLength="3"
                Style="{StaticResource RoundedTextBox}"
                TextAlignment="Center" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontFamily="Franklin Gothic Heavy"
                FontSize="15"
                Foreground="#FF2D2D2D"
                Text="."
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <TextBox
                Width="50"
                Margin="5,0,5,0"
                Background="#FF2D2D2D"
                BorderBrush="Orange"
                BorderThickness="1"
                Foreground="White"
                MaxLength="3"
                Style="{StaticResource RoundedTextBox}"
                TextAlignment="Center" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontFamily="Franklin Gothic Heavy"
                FontSize="15"
                Foreground="#FF2D2D2D"
                Text="."
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBox
                Width="50"
                Margin="5,0,5,0"
                Background="#FF2D2D2D"
                BorderBrush="Orange"
                BorderThickness="1"
                Foreground="White"
                MaxLength="3"
                Style="{StaticResource RoundedTextBox}"
                TextAlignment="Center" />
        </StackPanel>



        <Grid
            Grid.Row="6"
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0,40,0,35"
            Panel.ZIndex="2">
            <StackPanel Margin="10">
                <Button
                    Height="30"
                    Background="#FF2D2D2D"
                    Command="{Binding AddFileToDecodeCommand}"
                    FontFamily="Franklin Gothic Heavy"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="borderEnc"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="borderEnc" Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#FFFF4D2F" />
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Odaberi fajl za slanje" />
                        <Image
                            Width="16"
                            Height="16"
                            Margin="5,0,0,0"
                            Source="/upload.png" />
                    </StackPanel>
                </Button>

                <ItemsControl ItemsSource="{Binding FileToDecode}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="10"
                                Foreground="Black"
                                Text="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </StackPanel>
        </Grid>

        <Rectangle
            Grid.Row="6"
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="0,40,0,35"
            Panel.ZIndex="0"
            Fill="White"
            RadiusX="20"
            RadiusY="20" />

        <TextBox
            Grid.Row="5"
            Grid.Column="4"
            Margin="10,0"
            Background="#FF2D2D2D"
            BorderBrush="Orange"
            BorderThickness="1"
            Foreground="White"
            MaxLength="5"
            Style="{StaticResource RoundedTextBox}"
            Text="{Binding SendPort}"
            TextAlignment="Center" />


        <Button
            Grid.Row="10"
            Grid.Column="4"
            Grid.ColumnSpan="2"
            Width="200"
            Margin="10,0,20,0"
            Background="#FF2D2D2D"
            BorderBrush="{x:Null}"
            Command="{Binding CodeCommand}"
            Content="Posalji"
            FontFamily="Franklin Gothic Heavy"
            Foreground="White">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10">
                        <ContentPresenter
                            x:Name="contentPresenter"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextElement.Foreground="{TemplateBinding Foreground}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FFFF4D2F" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#FF4CAF50" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>
    </Grid>
</UserControl>
